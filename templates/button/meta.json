{
  "name": "Button",
  "description": "A customizable button component with size, border, radius, and click animation. Fully compatible with Tailwind CSS for background and text colors.",
  "category": "form",
  "tags": [
    "button",
    "interactive",
    "form",
    "cta",
    "action",
    "tailwind"
  ],
  "version": "1.0.0",
  "author": "@rajdeep",
  "created": "2025-08-28",
  "dependencies": {
    "npm": [
      "clsx"
    ],
    "peer": [
      "react",
      "prop-types"
    ]
  },
  "props": [
    {
      "name": "children",
      "type": "React.ReactNode",
      "required": false,
      "default": "undefined",
      "description": "The content to display inside the button"
    },
    {
      "name": "size",
      "type": "string",
      "required": false,
      "default": "sm",
      "description": "The size of the button",
      "options": [
        "sm",
        "md",
        "lg",
        "xl"
      ]
    },
    {
      "name": "disabled",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Whether the button is disabled and non-interactive"
    },
    {
      "name": "loading",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Whether the button is in a loading state with spinner"
    },
    {
      "name": "className",
      "type": "string",
      "required": false,
      "default": "''",
      "description": "Tailwind or custom classes to style background, text, hover, etc."
    },
    {
      "name": "onClick",
      "type": "function",
      "required": false,
      "default": "undefined",
      "description": "Function to call when the button is clicked"
    },
    {
      "name": "type",
      "type": "string",
      "required": false,
      "default": "button",
      "description": "The HTML button type attribute",
      "options": [
        "button",
        "submit",
        "reset"
      ]
    },
    {
      "name": "borderColor",
      "type": "string",
      "required": false,
      "default": "white",
      "description": "Border color of the button",
      "options": [
        "black",
        "white"
      ]
    },
    {
      "name": "borderWidth",
      "type": "number",
      "required": false,
      "default": "1",
      "description": "Border thickness of the button"
    },
    {
      "name": "borderStyle",
      "type": "string",
      "required": false,
      "default": "solid",
      "description": "Border style of the button",
      "options": [
        "solid",
        "dashed",
        "dotted",
        "double"
      ]
    },
    {
      "name": "borderRadius",
      "type": "string",
      "required": false,
      "default": "md",
      "description": "Border radius for rounded corners",
      "options": [
        "sm",
        "md",
        "lg",
        "xl",
        "full"
      ]
    }
  ],
  "files": [
    "component.jsx",
    "index.js",
    "meta.json"
  ],
  "customization": {
    "css_variables": [
      "--button-border-radius",
      "--button-transition"
    ],
    "styling_notes": "Background and text colors are meant to be customized using Tailwind classes via className. Borders and radius are controlled via props."
  },
  "accessibility": {
    "features": [
      "Keyboard navigation support",
      "Screen reader friendly with aria-disabled and aria-busy",
      "Focus visible outline",
      "Semantic <button> element"
    ]
  }
}
